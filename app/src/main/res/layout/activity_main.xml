<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_main_ed"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:hint="name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_60sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/name_main_ed"
        app:layout_constraintTop_toTopOf="@+id/name_main_ed"
        app:layout_constraintBottom_toBottomOf="@+id/name_main_ed"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Merna Mohamed"
        android:textStyle="bold"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_main_ed"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Print"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>